{
    "name": "maxvoronov/tic-tac-toe",
    "description": "Tic Tac Toe Game",
    "keywords": ["application", "tic-tac-tor", "game", "otus", "homework"],
    "minimum-stability": "stable",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Max Voronov",
            "email": "maxivoronov@gmail.com",
            "homepage": "https://github.com/MaxVoronov",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-pcntl": "*",
        "ext-readline": "*",
        "ext-sockets": "*",
        "symfony/console": "^4.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "composer phpcs",
        "phpcs": "vendor/bin/phpcs --standard=PSR2 --colors --extensions=php ./src -p -s"
    }
}
